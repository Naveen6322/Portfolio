{
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "portfolio.settings",
    "PYTHONUNBUFFERED": "1"
  },
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "startCommand": "gunicorn portfolio.wsgi"
}
